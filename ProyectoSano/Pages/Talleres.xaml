<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoSano.Pages.Talleres"
             Title="Talleres"
             NavigationPage.HasNavigationBar="False">

    <Grid>
        <Grid RowDefinitions="2*,7.6*,0.4*" Padding="0,0,0,10">
            <Grid Grid.Row="0" RowDefinitions="5.8*,4.2*" Padding="0">
                <Grid Grid.Row="0" VerticalOptions="Center" HorizontalOptions="Center" Padding="15">
                    <Image Source="logo.jpg" Aspect="AspectFill"/>
                </Grid>

                <Grid Grid.Row="1" BackgroundColor="LightGray" Padding="20,0">
                    <Label Text="Talleres de psicología" TextColor="#ec268f" FontSize="24" FontAttributes="Bold" 
                   VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
                    <Grid.Shadow>
                        <Shadow Brush="Black" Radius="25" Opacity="0.4" Offset="0,6"/>
                    </Grid.Shadow>
                </Grid>
            </Grid>

            <Grid Grid.Row="1" Padding="30,30,30,20" VerticalOptions="Center" HorizontalOptions="Center">
                <StackLayout Spacing="30" Padding="50">
                    <Label Text="Próximo taller Lunes 10 de noviembre" TextColor="#000000" FontSize="20" FontAttributes="Bold" HorizontalTextAlignment="Center"></Label>

                    <Grid BackgroundColor="White" Padding="40,15">
                        <Grid.Shadow>
                            <Shadow Brush="Black" Radius="20" Opacity="0.6" Offset="0,9"/>
                        </Grid.Shadow>
                        <Label Text="Haz click en contactarnos para inscribirte a este taller de psicología" TextColor="Red" FontAttributes="Bold" FontSize="16" HorizontalTextAlignment="Center"/>
                    </Grid>
                </StackLayout>
            </Grid>

            <Grid Grid.Row="2" HorizontalOptions="Center">
                <Frame Grid.Row="2" Background="Transparent" BorderColor="Black" CornerRadius="6" Padding="60,0">
                    <Grid ColumnDefinitions="auto,45" ColumnSpacing="8" HorizontalOptions="Center" VerticalOptions="Center">
                        <Image Grid.Column="1" Source="dotnet_bot.png"/>
                        <Label Grid.Column="0" Text="Contactanos" TextColor="Black" FontSize="20" FontAttributes="Bold" VerticalTextAlignment="Center"/>
                    </Grid>
                </Frame>
            </Grid>
        </Grid>
    </Grid>
</ContentPage>